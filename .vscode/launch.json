    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend"
        },
        {
            "type": "node-terminal",
            "name": "Run Type check",
            "request": "launch",
            "command": "pnpm run check:types",
            "cwd": "${workspaceFolder}/frontend"
        },
        {
            "type": "node-terminal",
            "name": "Run Test",
            "request": "launch",
            "command": "pnpm run test",
            "cwd": "${workspaceFolder}/frontend"
        }
    ]
}