  },
  "dependencies": {
    "hono": "^4.9.9"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.2.3",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "vite": "^6.3.5",
    "wrangler": "^4.17.0"
  }
}
