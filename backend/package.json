{
    "name": "backend",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "vite --host",
        "build": "vite build",
        "prepreview": "pnpm run build",
        "preview": "vite preview",
        "predeploy": "pnpm run build",
        "deploy": "wrangler deploy",
        "cf-typegen": "wrangler types --env-interface CloudflareBindings",
        "postinstall": "pnpm run cf-typegen; pnpm exec simple-git-hooks",
        "format": "node --experimental-strip-types node_modules/prettier/bin/prettier.cjs --write ."
    },
    "engines": {
        "node": ">=20"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.901.0",
        "@hono/clerk-auth": "^3.0.3",
        "@hono/standard-validator": "^0.1.5",
        "@hono/zod-openapi": "^1.1.3",
        "@scalar/hono-api-reference": "^0.9.20",
        "hono": "^4.9.9",
        "hono-openapi": "^1.1.0",
        "zod": "^4.1.11"
    },
    "devDependencies": {
        "@cloudflare/vite-plugin": "^1.2.3",
        "prettier": "^3.6.2",
        "simple-git-hooks": "^2.13.1",
        "vite": "^6.3.5",
        "wrangler": "^4.17.0"
    }
}