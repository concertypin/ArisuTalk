{
    "name": "backend",
    "type": "module",
    "private": true,
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/concertypin/ArisuTalk.git",
        "directory": "backend"
    },
    "scripts": {
        "dev": "vite --host",
        "build": "vite build",
        "prepreview": "pnpm run build",
        "preview": "vite preview",
        "predeploy": "pnpm run build",
        "deploy": "wrangler deploy",
        "cf-typegen": "wrangler types --env-interface CloudflareBindings",
        "postinstall": "pnpm run cf-typegen",
        "format": "biome format --write .",
        "lint": "biome lint .",
        "check": "biome check --write .",
        "auth": "pnpx http-server -p 5000 -c-1 tools/",
        "test": "vitest"
    },
    "engines": {
        "node": ">=20"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.901.0",
        "@azure/cosmos": "^4.5.1",
        "@hono/clerk-auth": "^3.0.3",
        "@hono/standard-validator": "^0.1.5",
        "@hono/zod-openapi": "^1.1.3",
        "@scalar/hono-api-reference": "^0.9.20",
        "aws4fetch": "^1.0.20",
        "firebase-rest-firestore": "^1.5.0",
        "hono": "^4.9.9",
        "hono-openapi": "^1.1.0",
        "zod": "^4.1.11"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.8",
        "@cloudflare/vite-plugin": "^1.2.3",
        "@cloudflare/vitest-pool-workers": "^0.10.11",
        "@vitest/ui": "^4.0.7",
        "consola": "^3.4.2",
        "vite": "^7.2.1",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4",
        "wrangler": "^4.17.0"
    }
