{
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "src/*.js",
    "src/*.ts",
    "src/*.svelte"
  ],
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM",
    ],
    "baseUrl": "./src", /* Specify the base directory to resolve non-relative module names. */
    "paths": {
      "$components/*": [
        "./lib/components/*"
      ],
      "$stores/*": [
        "./lib/stores/*"
      ],
      "$services/*": [
        "./lib/services/*"
      ],
      "$utils/*": [
        "./lib/utils/*"
      ],
      "$types/*": [
        "./types/*"
      ],
      "$constants/*": [
        "./constants/*"
      ],
      "$root/*": [
        "./*"
      ],
      "$lib/*": [
        "./lib/*"
      ]
    },
    "types": [
      "vite/client",
      "svelte/compiler"
    ],
    /* Type Checking */
    "noImplicitAny": true, /* Enable error reporting for expressions and declarations with an implied 'any' type. */
  },
  "extends": "./tsconfig.base.json",
  "references": [
    {
      "path": "./tsconfig.worker.json"
    }
  ]
}